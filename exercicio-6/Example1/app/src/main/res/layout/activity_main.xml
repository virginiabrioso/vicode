<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main_done"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        app:srcCompat="@drawable/elevator"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="0dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:scaleType="centerCrop"
        android:contentDescription="Teste"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintTop_creator="1"
        app:layout_constraintRight_creator="1"
        app:layout_constraintBottom_creator="1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main_done"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/activity_main_done"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/activity_main_done"
        tools:layout_constraintRight_creator="1"
        android:layout_marginBottom="16dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0"
        />


    <TextView
        android:id="@+id/num_andar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="1ยบ andar"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main_done"
        app:layout_constraintTop_toTopOf="@+id/activity_main_done"
        tools:layout_constraintBottom_creator="1" />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/btnSair"
        app:layout_constraintRight_toRightOf="@+id/activity_main_done"
        android:text="Entrar"
        android:textColor="#1d80f0"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        tools:layout_constraintBottom_creator="0"
        android:layout_marginRight="16dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Insira o andar\nque gostariade ir"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/btnSair"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:scaleType="centerCrop"
        android:text="Sair"
        android:textColor="#1d80f0"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="364dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="209dp"
        android:layout_height="180dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="45dp"
        app:layout_constraintTop_toBottomOf="@+id/edtN"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="26dp" />


</androidx.constraintlayout.widget.ConstraintLayout>